{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="/node_modules/sweetalert2/dist/sweetalert2.css">
{% endblock %}
{% block body %}
    <h1>Liste des articles</h1>
    <button id="createArticle" class="btn btn-success">Cr√©er un article</button>

    <div class="container">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.createdAt|date('d/m/Y H:i:s') }}</td>
                <td><a href="{{ path('admin.article.edit', {id: article.id}) }}">Edit</a> <a href="{{ path('admin.article.delete', {id: article.id}) }}">Delete</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/node_modules/sweetalert2/dist/sweetalert2.js"></script>

    <script>
        $('#createArticle').on('click', function(){
            Swal.fire({
                title: '<strong>Choose the layout</strong>',
                html:
                    '<ul><li><a href="{{ path('admin.article.create') }}?layout=layout_1">Layout 1</a></li><li><a href="{{ path('admin.article.create') }}?layout=layout_2">Layout 2</a></li></ul>',
                showCloseButton: true,
                showConfirmButton: false,
            })
        });
    </script>
{% endblock %}